<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yalemang.skinswitcher">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:name="com.yalemang.skinswitcher.App"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LmySkinSwitcher">
        <activity
            android:name="com.yalemang.skinswitcher.SwitchSkinActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.LmySkinSwitcher.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.yalemang.skinswitcher.SkinManagerActivity"/>
    </application>

</manifest>